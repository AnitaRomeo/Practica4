pipeline {
    agent any 
    stages{
        stage('listar directorio actual'){
            steps{
                sh 'ls -la'
            }
        }
        stage('build de docker'){
            steps{
                sh 'docker build -t web:latest . '
            }
        stage('rename and upload'){
            steps{
                sh 'docker iamge tag web:latest registry.pps.local:5000/web:latest && \
                docker push registry.pps.local:5000/web:latest'
            }
        }
        }
    }
}